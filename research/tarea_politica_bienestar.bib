issn = {2448718X},
keywords = {Latent-class models,Middle classes,Poverty,Security,Vulnerability},
month = {jul},
number = {339},
pages = {447--480},
publisher = {Fondo de Cultura Economica},
title = {{Mexico: Not a middle class but a poverty country. Analyzing middle class performance in between 2000-2014}},
url = {https://www.eltrimestreeconomico.com.mx/index.php/te/article/view/716},
